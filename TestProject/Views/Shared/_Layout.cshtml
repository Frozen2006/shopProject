<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css/bootstrap-responsive.css")
    @Styles.Render("~/Content/css/bootstrap.css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Content/js/bootstrap.js")
    @RenderSection("scripts", required: false)
        <style type="text/css">
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }
    </style>
</head>
    <body>
        <header>
            @Html.Partial("_Header")
        </header>
        <br/>
        <div class="container-fluid">

            @RenderBody()

        </div> <!-- /container -->
        
        <hr/>
        <footer>
            <p align="center">&copy; Company 2013</p>
        </footer>
    </body>

</html>
