@using Helpers
@using TestProject.Models
@model TestProject.Models.TimeSlotsModel
@Scripts.Render("~/Content/js/TimeSlots.js")

<div class="row-fluid">
    <div class="span6 offset3">
        <h2>Fast delivery</h2>
        @{TimeSlotsTableModel tstm = new TimeSlotsTableModel() {Slots = Model.SlotsOneHour, Step = 1, Today = Model.Today, startDay = Model.startDay};}
        @Html.Partial("_particalTable", tstm)
    </div>
</div>

<div class="row-fluid">
    <div class="span6 offset3">
        <h2>Save 3% !</h2>
        @{tstm = new TimeSlotsTableModel() {Slots = Model.SlotsTwoHour, Step = 2, Today = Model.Today, startDay = Model.startDay};}
        @Html.Partial("_particalTable", tstm)
    </div>
</div>

<div class="row-fluid">
    <div class="span6 offset3">
        <h2>Save 6% !</h2>
        @{tstm = new TimeSlotsTableModel() {Slots = Model.SlotsFourHour, Step = 4, Today = Model.Today, startDay = Model.startDay};}
        @Html.Partial("_particalTable", tstm)
    </div>
</div>       
        
               
 <div class="row-fluid">
    <div class="span6 offset3">
        @Html.ActionLink("To shop", "Index", "Category", new {}, new { @class="btn btn-success btn-large"})
        
        @if (Model.isButtonEnable)
        {
            @Html.ActionLink("Continue...", "Index", "Cart", new {}, new {@class = "btn btn-primary btn-large"});
        }
        
    </div>
</div>       
                      

<div id="myModal" class="modal hide fade">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3>Bookig time</h3>
    </div>
    <div class="modal-body">
        <p>Are you sure to book this time?</p> <br/>
        <p id="time-place"></p>
    </div>
    <div class="modal-footer">
        <a href="#" class="btn" onclick="closeModal()">No</a>
        <a href="#" id="bookThis" class="btn btn-primary">Yes</a>
    </div>
</div>